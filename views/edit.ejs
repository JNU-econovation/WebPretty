        <div class="container">
            <h1><strong>수정하기</strong></h1>
            <form method="post" action="/board/edit/<%= postId %>" onsubmit= "onWriteSubmit()">
                <input type="hidden" name="postId" id="postId" value="<%= postId %>" />
                <table class="table">
                    <tr>
                        <th>제목</th>
                        <td><input type="text" name="title" id="title" value="<%= rows[0].postTitle %>" required /></td>
                    </tr>
                    <tr>
                        <th>작성자</th>
                        <td><input type="text" name="writer" id="writer" value="<%= rows[0].userNum %>" required /></td>
                    </tr>
                    <tr>
                        <th>내용</th>
                        <td><input type="text" name="content" id="content" value="<%= rows[0].postContents %>" required /></td>
                    </tr>
                    <tr>
                        <th>첨부파일</th>
                        <td><input type="text" name="file" id="file" value="<%= rows[0].file %>" required /></td>
                    </tr>
                    <tr>
                        <th>등록</th>
                        <td colspan="2"><input type="submit" value="등록"></td>
                    </tr>
                </table>
            </form>
        </div>

        <script>
        function onWriteSubmit()
        {
            if ( $("#title").val().trim() == "")
            {
                var message = "제목을 입력해주세요";
                $("#title").val("");
                $("#title").focus();
                alert(message);
                return false;
            }

            if ( $("#content").val().trim() == "")
            {
                var message = "제목을 입력해주세요";
                $("#content").val("");
                $("#content").focus();
                alert(message);
                return false;
            }
        }
        </script>
