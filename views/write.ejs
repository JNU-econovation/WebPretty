  <script>
    var send_array = Array();
    var send_cnt = 0;
    var chkbox = $(".checkSelect");

    for (i = 0; i < chkbox.length; i++) {
      if (chkbox[i].checked == true) {
        send_array[send_cnt] = chkbox[i].value;
        send_cnt++;
      }
    }

    $("#array").val(send_array);
    
    function onWriteSubmit() {
      if ($("#title").val().trim() == "") {
        var message = "제목을 입력해주세요";
        $("#title").val("");
        $("#title").focus();
        alert(message);
        return false;
      }

      if ($("#content").val().trim() == "") {
        var message = "제목을 입력해주세요";
        $("#content").val("");
        $("#content").focus();
        alert(message);
        return false;
      }
    }
  </script>
